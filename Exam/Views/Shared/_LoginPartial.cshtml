@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav ml-auto p-2">
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="Advertisement" asp-action="Index">Advertise With Us</a>
        </li>
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="Job" asp-action="Index">View Jobs</a>
        </li>
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="Resume" asp-action="EditResume">Edit Resume</a>
        </li>
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="UserDashboard" asp-action="Index">Dashboard</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item mr-4">
            <a class="nav-link" asp-controller="Advertisement" asp-action="Index">Advertise With Us</a>
        </li>
        <li class="nav-item mr-4">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item mr-4">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>